{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "index.ts",
    "routes/**/*.ts",
    "middlewares/**/*.ts",
    "configs/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}